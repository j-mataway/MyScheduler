<%- include('partials/header') -%>
<!-- Page Wrapper -->
<div id="page-wrapper">
  <!-- Banner -->
    <section id="banner">
      <div class="inner">
        <div class="logo"><img src="/images/logo.png" class="icon" alt=""></div>    
        <h2>KJ Pizza - MySchedule</h2>
      </div>
    </section>

  <!-- Wrapper -->
    <section id="wrapper">

      <!-- One -->
        <section id="one" class="wrapper spotlight style1">
          <div class="inner">
            <% if (!schedule) { %>
            <h3>View Schedule</h3>
            <form method="get" action="/schedules/getSchedule">
                <div class="features">
                    <label for="schedule" >Select Schedule Date</label>
                    <select name="schedule" class="schedule">
                            <option value="none" selected disabled hidden> Select a Schedule Start Date </option>
                        <% for(let i = 0; i<schedules.length; i++) { %>
                            <option value="<%=`${scheduleDates[i]}`%>"% name="schedule"><%=`${scheduleDates[i]}` %></option>
                        <% } %>   
                        </select> 
                <ul class="actions">
                    <li><input type="submit" value="Submit" /></li>
                </ul>
            </form>
            <% }else{%>
                <h3>View Schedule</h3>
                <div class="features">
                 <ul class="alt">
                    <li>Schedule for week beginning <%=`${selectedDate}`%> for <%=`${user.firstName} ${user.lastName}`%></li>
                    <% if (schedule.mondayIn === 'off') { %>
                    <li>Monday - OFF</li>
                    <%}else{%>     
                    <li>Monday - <%=`${schedule.mondayIn} to ${schedule.mondayOut}`%></li> 
                    <%}%>
                    <% if (schedule.tuesdayIn === 'off') { %>
                    <li>Tuesday - OFF</li>
                    <%}else{%>     
                    <li>Tuesday - <%=`${schedule.tuesdayIn} to ${schedule.tuesdayOut}`%></li> 
                    <%}%>
                    <% if (schedule.wednesdayIn === 'off') { %>
                    <li>Wednesday - OFF</li>
                    <%}else{%>     
                    <li>Wednesday - <%=`${schedule.wednesdayIn} to ${schedule.wednesdayOut}`%></li> 
                    <%}%>
                    <% if (schedule.thursdayIn === 'off') { %>
                    <li>Thursday - OFF</li>
                    <%}else{%>     
                    <li>Thursday - <%=`${schedule.thursdayIn} to ${schedule.thursdayOut}`%></li> 
                    <%}%>
                    <% if (schedule.fridayIn === 'off') { %>
                    <li>Friday - OFF</li>
                    <%}else{%>     
                    <li>Friday - <%=`${schedule.fridayIn} to ${schedule.fridayOut}`%></li> 
                    <%}%>
                    <% if (schedule.saturdayIn === 'off') { %>
                    <li>Saturday - OFF</li>
                    <%}else{%>     
                    <li>Saturday - <%=`${schedule.saturdayIn} to ${schedule.saturdayOut}`%></li> 
                    <%}%>
                    <% if (schedule.sundayIn === 'off') { %>
                    <li>Sunday - OFF</li>
                    <%}else{%>     
                    <li>Sunday - <%=`${schedule.sundayIn} to ${schedule.sundayOut}`%></li> 
                    <%}%>
                 </ul>
                </div>   
            <% } %>
        </div>
        </section>
        <section id="two" class="wrapper alt spotlight style2">
          <div class="inner">
            <div class ="features">
              <a href="/profile" class="button">Back</a>
              <a href="/logout" class="button">Logout</a>
            </div>  
          </div>
        </section>
    </section>
        <%- include('partials/footer') -%>